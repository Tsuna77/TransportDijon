<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
   		android:background="#000000">

        <TextView
            android:id="@+id/search_line_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chose_this_line"
            android:textColor="@color/white" />

        <Spinner
            android:id="@+id/spinner_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/spinner" />

        <TextView
            android:id="@+id/search_station_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chose_station"
            android:textColor="@color/white" />

        <Spinner
            android:id="@+id/spinner_station"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/spinner" />

        <TextView
            android:id="@+id/search_result_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:height="100dp"
            android:textIsSelectable="false" />
		<RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="horizontal"
	   		android:background="#000000">

		</RelativeLayout>
    </LinearLayout>
    
</FrameLayout>